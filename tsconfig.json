{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "removeComments": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}